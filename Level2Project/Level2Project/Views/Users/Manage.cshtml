@model List<GetUsersListDto>
 

<div class="card">
    <h5 class="card-header">Search</h5>
    <form asp-action="Manage" asp-controller="Users" method="get">
        <div class="row" style="padding: 30px;padding-top: 0px;">
            <div class="col-md-6">
                <input type="search" id="query" name="query" class="form-control" />
            </div>
            <div class="col-md-6">
                <button type="submit"  class="btn btn-info">
                    <i class='bx  bx-search-alt'></i>
                    Search
                </button>
            </div>
        </div>
    </form>
</div>
<br />

<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Manage Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>User Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.UserType</td>
                        <td>
                            @if (user.StatusType == StatusTypeEnum.Active)
                            {
                                <span class="badge bg-label-success me-1">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Inactive</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="icon-base bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="Update" asp-controller="Users" asp-route-id="@user.Id"><i class="icon-base bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="DeleteUser" asp-controller="Users" asp-route-id="@user.Id"><i class="icon-base bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Basic Bootstrap Table -->