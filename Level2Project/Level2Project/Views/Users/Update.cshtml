@{
    string notifyClass = string.Empty;
    string notifyTitle = string.Empty;
}
@model UpdateUserInfoDto;

<div class="col-xl-6">
    <div class="card mb-6">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add New User</h5>
        </div>
        <div class="card-body">
            @switch (Model.AddUserResponseDto.Status)
            {
                case OpStatus.None:
                    notifyClass = string.Empty;
                    notifyTitle = string.Empty;
                    break;
                case OpStatus.Success:
                    notifyClass = "alert-success";
                    notifyTitle = "Sucess";
                    break;
                case OpStatus.AlreadyExists:
                    notifyClass = "alert-warning";
                    notifyTitle = "Already Exists";
                    break;
                case OpStatus.Warning:
                    notifyClass = "alert-warning";
                    notifyTitle = "Warning";
                    break;
                default:
                    notifyClass = "alert-danger";
                    notifyTitle = "Error";
                    break;
            }
            @if (!string.IsNullOrEmpty(notifyClass))
            {
                <div class="alert @notifyClass alert-dismissible" role="alert">
                    <h5 class="alert-heading d-flex align-items-center flex-wrap gap-1 mb-1">@notifyTitle</h5>
                    <p class="mb-0">@Model.AddUserResponseDto.Message</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="AddUser" asp-controller="Users" method="post">
                <div class="mb-6">
                    <label class="form-label" for="fullName">Full Name</label>
                    <div class="input-group input-group-merge">
                        <span id="fullName" class="input-group-text">
                            <i class="bx bx-user"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               id="fullName"
                               name="fullName"
                               required
                               placeholder="Enter Full Name"
                               aria-label="Enter Full Name"
                               aria-describedby="fullName" />
                    </div>
                </div>
                <div class="mb-6">
                    <label class="form-label" for="Email">Email</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                        <input type="text"
                               id="email"
                               name="email"
                               required
                               class="form-control"
                               placeholder="Enter Email Address"
                               aria-label="Enter Email Address"
                               aria-describedby="email" />
                        <span id="email" class="input-group-text">@@example.com</span>
                    </div>
                    <div class="form-text">You can use letters, numbers & periods</div>
                </div>
                <div class="mb-6">
                    <label class="form-label" for="password">Password</label>
                    <div class="input-group input-group-merge">
                        <span id="Password" class="input-group-text">
                            <i class="bx bx-buildings"></i>
                        </span>
                        <input type="password"
                               id="password"
                               name="password"
                               required
                               class="form-control"
                               placeholder="Enter Password."
                               aria-label="Enter Password."
                               aria-describedby="password" />
                    </div>
                </div>
                <div class="mb-6">
                    <label class="form-label" for="phoneNumber">Phone No</label>
                    <div class="input-group input-group-merge">
                        <span id="phoneNumber" class="input-group-text">
                            <i class="bx bx-phone"></i>
                        </span>
                        <input type="text"
                               id="phoneNumber"
                               name="phoneNumber"
                               required
                               class="form-control phone-mask"
                               placeholder="Enter Phone Number"
                               aria-label="Enter Phone Number"
                               aria-describedby="basic-icon-default-phone2" />
                    </div>
                </div>
                <div class="mb-6">
                    <label class="form-label" for="basic-icon-default-message">Address</label>
                    <div class="input-group input-group-merge">
                        <span id="address" class="input-group-text">
                            <i class="bx bx-comment"></i>
                        </span>
                        <textarea id="address"
                                  name="address"
                                  class="form-control"
                                  placeholder="Address?"
                                  aria-label="Address?"
                                  aria-describedby="address"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div> 